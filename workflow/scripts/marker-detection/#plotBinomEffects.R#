#!/usr/bin/env Rscript

pheatmap.color <- function(x) {

    # Return vector of colors used in heatmap

    colorRampPalette(rev(RColorBrewer::brewer.pal(n = 5, name = x)))(100)
    
}

pheatmap.breaks <- function(x) {

    # Return vector of breaks used in heatmap

    seq(-x, x, length.out = 101)

}

main <- function(input, output, params, log) {

    # Log function

    out <- file(log$out, open = "wt")

    err <- file(log$err, open = "wt")

    sink(out, type = "output")

    sink(err, type = "message")

    # Script function

    library(pheatmap)

    library(scran)

    res <- readRDS(input$rds)

    sig <- Filter(nrow, lapply(res, subset, FDR < params$FDR))

    lab <- lapply(sig, "[[", "Symbol")

    lfc <- lapply(sig, getMarkerEffects, prefix = "logFC")

    row <- sapply(lfc, nrow) > 1

    dir <- dir.create(output$dir)

    fns <- paste0(output$dir, "/", names(sig), ".pdf")

    arg <- list(
        color = pheatmap.color("RdBu"),
        breaks = pheatmap.breaks(5),
        width = 6,
        height = 8
    )

    plt <- mapply(
        FUN = pheatmap,
        mat = lfc,
        cluster_rows = row,
        labels_row = ,
        filename = fns,
        MoreArgs = arg
    )

    # Image function

    library(magick)

    pdf <- lapply(fns, image_read_pdf)

    pdf <- lapply(pdf, image_trim)

    pdf <- lapply(pdf, image_border, color = "#FFFFFF", geometry = "50x50")

    pdf <- mapply(image_write, image = pdf, path = fns, MoreArgs = list(format = "pdf"))

}

main(snakemake@input, snakemake@output, snakemake@params, snakemake@log)
